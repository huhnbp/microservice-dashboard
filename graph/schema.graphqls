scalar Time

type Service {
  name: String!
  status: String!
  latencyMs: Float!
  errorRate: Float!
  cpuUsage: Float!      # percentage
  memoryUsage: Float!   # MB
  uptime: Int!          # sec
  requestRate: Int!     # req/sec
}

type Query {
  services: [Service!]!
  service(name: String!): Service
}
